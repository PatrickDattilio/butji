// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  description String
  url         String
  category    String
  tags        String   // JSON array stored as string
  slug        String?  @unique
  featured    Boolean  @default(false)
  approved    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([approved])
  @@index([category])
  @@index([slug])
}

model Submission {
  id              String   @id @default(cuid())
  title           String
  description     String
  url             String
  category        String
  tags            String   // JSON array stored as string
  status          String   @default("pending") // pending, approved, rejected
  featured        Boolean  @default(false)
  submittedAt     DateTime @default(now())
  submittedBy     String?
  reviewedAt      DateTime?
  reviewedBy      String?
  rejectionReason String?

  @@index([status])
  @@index([category])
}

model Company {
  id            String   @id @default(cuid())
  name          String
  description   String   @db.Text
  website       String?
  logoUrl       String?
  founders      String   // JSON array stored as string
  ceo           String?
  foundedYear   Int?
  funding       String?  // JSON object or string
  valuation     String?
  products      String   // JSON array stored as string
  controversies String?  // JSON array stored as string
  layoffs       String?  // JSON array stored as string
  tags          String   // JSON array stored as string
  citations     String?  // JSON object stored as string: { "fieldName": [{ url, title?, date? }] }
  locations     String?  // JSON array stored as string: [{ type, address, city, state, country, coordinates?, notes? }]
  directAction  String?  // JSON array stored as string: [{ title, url, type, status, date? }]
  unionInfo     String?  // JSON object stored as string: { status, union?, organizingEfforts[], laborViolations[] }
  employeeCount Int?     // Current headcount
  socialMedia   String?  // JSON object stored as string: { twitter, linkedin, facebook, instagram, youtube, tiktok? }
  contactInfo   String?  // JSON object stored as string: { email, pressEmail, investorRelations, phone, address?, notes? }
  slug          String?  @unique
  featured      Boolean  @default(false)
  approved      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relationship fields
  parentCompanyId String?
  parentCompany   Company?  @relation("CompanyHierarchy", fields: [parentCompanyId], references: [id])
  subsidiaries    Company[] @relation("CompanyHierarchy")
  partnerships    String?   // JSON array stored as string: [{ companyId, type, description? }]

  // Relationships via join tables
  boardMembers    CompanyBoardMember[]
  investments     CompanyInvestment[] @relation("CompanyInvestments")
  investors       CompanyInvestment[] @relation("CompanyInvestors")
  foundersRelation CompanyFounder[]

  // Existing relationships
  ownedDataCenters    DataCenter[]              @relation("DataCenterOwner")
  usedDataCenters     CompanyDataCenterUser[]

  @@index([approved])
  @@index([name])
  @@index([slug])
  @@index([parentCompanyId])
}

model CompanySubmission {
  id              String   @id @default(cuid())
  name            String
  description     String   @db.Text
  website         String?
  logoUrl         String?
  founders        String   // JSON array stored as string
  ceo             String?
  foundedYear     Int?
  funding         String?  // JSON object or string
  valuation       String?
  products        String   // JSON array stored as string
  controversies   String?  // JSON array stored as string
  layoffs         String?  // JSON array stored as string
  tags            String   // JSON array stored as string
  citations       String?  // JSON object stored as string: { "fieldName": [{ url, title?, date? }] }
  locations       String?  // JSON array stored as string: [{ type, address, city, state, country, coordinates?, notes? }]
  directAction    String?  // JSON array stored as string: [{ title, url, type, status, date? }]
  unionInfo       String?  // JSON object stored as string: { status, union?, organizingEfforts[], laborViolations[] }
  employeeCount   Int?     // Current headcount
  socialMedia     String?  // JSON object stored as string: { twitter, linkedin, facebook, instagram, youtube, tiktok? }
  contactInfo     String?  // JSON object stored as string: { email, pressEmail, investorRelations, phone, address?, notes? }
  status          String   @default("pending") // pending, approved, rejected
  featured        Boolean  @default(false)
  submittedAt     DateTime @default(now())
  submittedBy     String?
  reviewedAt      DateTime?
  reviewedBy      String?
  rejectionReason String?

  @@index([status])
}

model NewsSource {
  id          String   @id @default(cuid())
  name        String
  url         String   // RSS feed URL or API endpoint
  type        String   @default("rss") // rss, api
  enabled     Boolean  @default(true)
  lastFetched DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([enabled])
}

model NewsArticle {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  url         String
  source      String   // Source name
  sourceUrl   String?  // Original source URL
  imageUrl    String?
  publishedAt DateTime
  fetchedAt   DateTime @default(now())
  tags        String?  // JSON array stored as string
  featured    Boolean  @default(false)
  approved    Boolean  @default(true)

  @@index([publishedAt])
  @@index([approved])
  @@index([source])
}

model Report {
  id            String   @id @default(cuid())
  type          String   // "company" or "resource"
  targetId      String   // ID of the company or resource being reported
  reporterEmail String?
  field         String?  // Which field needs updating (e.g., "description", "ceo", "controversies")
  newValue      String?  // The new/corrected information
  source        String?  // Citation/source for the new information
  message       String   @db.Text // Free-text message/notes
  status        String   @default("pending") // pending, reviewed, resolved, dismissed
  createdAt     DateTime @default(now())
  reviewedAt    DateTime?
  reviewedBy    String?
  adminNotes    String?  @db.Text // Internal admin notes
  
  @@index([type, targetId])
  @@index([status])
  @@index([createdAt])
}

model DataCenter {
  id                    String   @id @default(cuid())
  handle                String   @unique // e.g., "Amazon Canton Mississippi"
  title                 String
  project               String?  // e.g., "Project Rainier #speculative"
  address               String?
  latitude              String?  // Stored as string to preserve format (e.g., "32Â°35'25\"N")
  longitude             String?  // Stored as string to preserve format
  timelapseImageUrl     String?  // URL from Sentinel satellite timelapse JSON
  ownerCompanyId        String?  // Company that owns the data center
  currentH100Equivalents Float?
  currentPowerMW        Float?
  currentCapitalCostUSD Float?   // In billions
  investors             String?  // JSON array stored as string
  constructionCompanies String?  // JSON array stored as string
  energyCompanies       String?  // JSON array stored as string
  citations             String?  // JSON array stored as string: [{ url, title?, date? }]
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  owner                 Company?              @relation("DataCenterOwner", fields: [ownerCompanyId], references: [id])
  users                 CompanyDataCenterUser[] // Companies using this data center

  @@index([ownerCompanyId])
  @@index([handle])
}

model CompanyDataCenterUser {
  id          String   @id @default(cuid())
  companyId   String
  dataCenterId String
  confidence  String?  // e.g., "#confident", "#speculative", "#likely"
  createdAt   DateTime @default(now())

  company     Company    @relation(fields: [companyId], references: [id], onDelete: Cascade)
  dataCenter  DataCenter @relation(fields: [dataCenterId], references: [id], onDelete: Cascade)

  @@unique([companyId, dataCenterId])
  @@index([companyId])
  @@index([dataCenterId])
}

model Person {
  id          String   @id @default(cuid())
  name        String
  slug        String?  @unique
  bio         String?  @db.Text
  photoUrl    String?
  linkedinUrl String?
  wikipediaUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  boardPositions    CompanyBoardMember[]
  investments       CompanyInvestment[]
  foundedCompanies  CompanyFounder[]
  
  @@index([name])
  @@index([slug])
}

model CompanyBoardMember {
  id        String   @id @default(cuid())
  personId  String
  companyId String
  title     String   // e.g., "Board Member", "Chairman", "Independent Director"
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime @default(now())

  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([personId, companyId])
  @@index([personId])
  @@index([companyId])
}

model CompanyInvestment {
  id          String   @id @default(cuid())
  personId    String?  // Nullable - can be person or company investor
  companyId   String   // The company receiving investment
  investorCompanyId String? // If investor is a company, not a person
  amount      String?  // e.g., "$10M", "Series A"
  round       String?  // e.g., "Series A", "Seed"
  date        DateTime?
  role        String?  // e.g., "Lead Investor", "Participant"
  createdAt   DateTime @default(now())

  person      Person?  @relation(fields: [personId], references: [id], onDelete: Cascade)
  company     Company  @relation("CompanyInvestments", fields: [companyId], references: [id], onDelete: Cascade)
  investorCompany Company? @relation("CompanyInvestors", fields: [investorCompanyId], references: [id], onDelete: Cascade)

  @@index([personId])
  @@index([companyId])
  @@index([investorCompanyId])
}

model CompanyFounder {
  id        String   @id @default(cuid())
  personId  String
  companyId String
  role      String?  // e.g., "Co-founder", "Founder"
  createdAt DateTime @default(now())

  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([personId, companyId])
  @@index([personId])
  @@index([companyId])
}


