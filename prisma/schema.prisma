// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  description String
  url         String
  category    String
  tags        String   // JSON array stored as string
  featured    Boolean  @default(false)
  approved    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([approved])
  @@index([category])
}

model Submission {
  id              String   @id @default(cuid())
  title           String
  description     String
  url             String
  category        String
  tags            String   // JSON array stored as string
  status          String   @default("pending") // pending, approved, rejected
  featured        Boolean  @default(false)
  submittedAt     DateTime @default(now())
  submittedBy     String?
  reviewedAt      DateTime?
  reviewedBy      String?
  rejectionReason String?

  @@index([status])
  @@index([category])
}

model Company {
  id            String   @id @default(cuid())
  name          String
  description   String   @db.Text
  website       String?
  logoUrl       String?
  founders      String   // JSON array stored as string
  ceo           String?
  foundedYear   Int?
  funding       String?  // JSON object or string
  valuation     String?
  products      String   // JSON array stored as string
  controversies String?  // JSON array stored as string
  layoffs       String?  // JSON array stored as string
  tags          String   // JSON array stored as string
  citations     String?  // JSON object stored as string: { "fieldName": [{ url, title?, date? }] }
  featured      Boolean  @default(false)
  approved      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([approved])
  @@index([name])
}

model CompanySubmission {
  id              String   @id @default(cuid())
  name            String
  description     String   @db.Text
  website         String?
  logoUrl         String?
  founders        String   // JSON array stored as string
  ceo             String?
  foundedYear     Int?
  funding         String?  // JSON object or string
  valuation       String?
  products        String   // JSON array stored as string
  controversies   String?  // JSON array stored as string
  layoffs         String?  // JSON array stored as string
  tags            String   // JSON array stored as string
  citations       String?  // JSON object stored as string: { "fieldName": [{ url, title?, date? }] }
  status          String   @default("pending") // pending, approved, rejected
  featured        Boolean  @default(false)
  submittedAt     DateTime @default(now())
  submittedBy     String?
  reviewedAt      DateTime?
  reviewedBy      String?
  rejectionReason String?

  @@index([status])
}

model NewsSource {
  id          String   @id @default(cuid())
  name        String
  url         String   // RSS feed URL or API endpoint
  type        String   @default("rss") // rss, api
  enabled     Boolean  @default(true)
  lastFetched DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([enabled])
}

model NewsArticle {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  url         String
  source      String   // Source name
  sourceUrl   String?  // Original source URL
  imageUrl    String?
  publishedAt DateTime
  fetchedAt   DateTime @default(now())
  tags        String?  // JSON array stored as string
  featured    Boolean  @default(false)
  approved    Boolean  @default(true)

  @@index([publishedAt])
  @@index([approved])
  @@index([source])
}


